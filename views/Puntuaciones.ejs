<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quiniela</title>
  <link rel="stylesheet" href="/sPuntuaciones.css">
</head>
<body>
  <div class="container">

    <div class="barraNav">
      <div class="contenido">
        <a href="/Home" class="btn-contenido" id="Quiniela">Quiniela</a>
        <a href="/Puntuaciones" class="btn-contenido" id="Puntuaciones">Puntuaciones</a>
        <a href="/chats" class="btn-contenido">Chats</a>
      </div>

      <div class="perfilUserH">
        <img src="<%= fotoPerfil %>" class="perfil-imgH" id="perfilImg">
      </div>
    </div>

    <div class="contenidoRS">
      <div class="ranking-container">
      <img src="/Copa.png" alt="Copa izquierda" class="copa copa-left">

      <h2>Ranking de Puntuaciones</h2>
      <ul class="ranking-list">
        <li class="top1">
          <span class="puesto">1</span>
          <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_640.png" class="avatar">
          <span class="nombre">Juan Pérez</span>
          <span class="puntos">7000 pts</span>
        </li>
        <li>
          <span class="puesto">2</span>
          <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_640.png" class="avatar">
          <span class="nombre">Carlos López</span>
          <span class="puntos">5500 pts</span>
        </li>
        <li>
          <span class="puesto">3</span>
          <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_640.png" class="avatar">
          <span class="nombre">Ana Torres</span>
          <span class="puntos">4500 pts</span>
        </li>
        <li class="yo">
          <span class="puesto">8</span>
          <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_640.png" class="avatar">
          <span class="nombre">Yo</span>
          <span class="puntos">500 pts</span>
        </li>
      </ul>

      <img src="/Copa.png" alt="Copa derecha" class="copa copa-right">
    </div>

   <div class="status-container">
      <h2>Mi Status</h2>
      <div class="status-content">
        
        <div class="milestones-left">
          <div class="milestone" style="top: 0%;">Recompensa 5</div>
          <div class="milestone" style="top: 10%;">Recompensa 4</div>
          <div class="milestone" style="top: 40%;">Recompensa 3</div>
          <div class="milestone" style="top: 70%;">Recompensa 2</div>
          <div class="milestone" style="top: 90%;">Recompensa 1</div>
        </div>

        <div class="progress-bar">
          <div class="progress-fill" id="progressFill"></div>
          <div class="bar-marker" style="top: 10%;"></div>
          <div class="bar-marker" style="top: 40%;"></div>
          <div class="bar-marker" style="top: 70%;"></div>
          <div class="bar-marker" style="top: 90%;"></div>
        </div>

        <div class="status-info">
          <label class="titPoints">Mis puntos:</label>
          <p id="misPuntos" class="MyPoints">500 pts</p>
        </div>
      </div>
    </div>

    </div>
    
    <div class="menuH" id="dropdownMenu">
        <a href="/PerfilU">Perfil de Usuario</a>
        <a href="/logout">Cerrar Sesión</a>
    </div>

  </div>

  <script src="/menu.js"></script>
  <script src="/Quiniela.js"></script>
</body>
<script>
  const puntosActuales = 500; 
  const puntosMaximos = 10000; 

  const porcentaje = (puntosActuales / puntosMaximos) * 100;

  document.getElementById("progressFill").style.height = porcentaje + "%";

  document.getElementById("misPuntos").textContent = puntosActuales + " pts";
</script>

</html>